#!/bin/bash

#PBS -N bench_mpich
#PBS -l select=2:node_type=rome:mpiprocs=2
#PBS -l walltime=1:00:00
cd $PBS_O_WORKDIR

IMPL=mpich/4.1.2

module load hlrs-software-stack/current gcc/13.1.0
module load mpich/4.1.2

source pbs/bench.sh
setup "$IMPL"
BIN_DIRECTORY=$(bin_directory) 

mpirun --version > version_mpich.log
mpirun -np 2 -ppn 1 $BIN_DIRECTORY/bench_mpich ALL_HAWK > results.log 2>&1
