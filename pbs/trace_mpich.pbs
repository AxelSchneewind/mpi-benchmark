#!/bin/bash

#PBS -N trace_mpich
#PBS -l select=2:node_type=rome:mpiprocs=2
#PBS -l walltime=4:00:00
cd $PBS_O_WORKDIR

source ./pbs/run-configs/mpich.sh
source ~/tracing-env-mpich.sh
source ./pbs/scorep-config.sh
source ./pbs/bench.sh

setup "$IMPL"

mpirun --version > version_mpich.log
scalasca -analyze -t $MPI_RUN $MPI_ARGS $EXECUTABLE $(make_trace_args) > results.log 2>&1
